<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.abdulrahman.littlesnap.AutoFitTextureView
            android:id="@+id/camera_textureView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
    />

    <!--Flash toggle -->

    <RelativeLayout
            android:layout_toLeftOf="@id/switch_toggle_container"
            android:id="@+id/flash_toggle_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    >

        <ImageButton
                android:layout_width="44dp"
                android:layout_height="44dp"
                app:srcCompat="@drawable/ic_flash_off"
                android:id="@+id/flashToggle"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="24dp"/>
    </RelativeLayout>
    <!--Switch Orientation  -->
    <RelativeLayout
            android:id="@+id/switch_toggle_container"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
    >
        <ImageButton
                android:scaleType="fitXY"
                android:layout_width="44dp"
                android:layout_height="44dp"
                app:srcCompat="@drawable/ic_switch_camera_orient"
                android:id="@+id/switchCamOrient"
                android:layout_marginTop="8dp"/>
    </RelativeLayout>

    <!--Capture still shot button -->
    <RelativeLayout
            android:id="@+id/capture_button_container"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cam_action_stillshot_icon"
                android:id="@+id/stillShot_imageButton"
        />
    </RelativeLayout>


    <!-- Edit image after captured -->
    <RelativeLayout
            android:id="@+id/stillShot_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
    >

        <!--Texture View to draw some thing -->

        <com.abdulrahman.littlesnap.fragments.DrawableImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:src="@drawable/img_amusing"
                android:id="@+id/stillShot_imageView"
        />


        <!-- To close image-->
        <RelativeLayout
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:animateLayoutChanges="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/close_image_imageView"
                    android:layout_width="40dp"
                    android:src="@drawable/x_white_icon"
                    android:layout_height="40dp"/>


        </RelativeLayout>
        <!--To draw on image -->
        <RelativeLayout
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/pen_container"
                android:animateLayoutChanges="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageButton
                    android:layout_centerInParent="true"
                    android:padding="10dp"
                    android:id="@+id/pen_draw_imageButton"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_pen_small"
                    android:layout_width="45dp"
                    android:layout_height="45dp"/>

        </RelativeLayout>
        <!--End edit picture-->

        <!--Colors Picker -->
        <RelativeLayout
                android:id="@+id/colors_picker_container"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/pen_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <!--Custom view -->

            <com.abdulrahman.littlesnap.fragments.VerticalSlideColorPicker
                    android:id="@+id/color_picker"
                    app:borderColor="@color/Black"
                    app:borderWidth="2dp"
                    app:colors="@array/rainbow"
                    android:layout_centerHorizontal="true"
                    android:layout_width="20dp"
                    android:layout_height="200dp"/>
        </RelativeLayout>


        <!--Undo container -->
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/undo_draw_container"
                android:layout_toLeftOf="@id/pen_container">

            <ImageButton
                    android:id="@+id/undo_draw_imageButton"
                    android:src="@drawable/ic_undo"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
            />

        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>