<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container_sticker_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <com.abdulrahman.littlesnap.AutoFitTextureView
            android:id="@+id/camera_textureView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
    />

    <!--Flash toggle -->

    <RelativeLayout
            android:layout_toLeftOf="@id/switch_toggle_container"
            android:id="@+id/flash_toggle_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    >

        <ImageButton
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_flash_white"
                android:id="@+id/flashToggle"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="24dp"/>
    </RelativeLayout>
    <!--Switch Orientation  -->
    <RelativeLayout
            android:id="@+id/switch_toggle_container"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
    >
        <ImageButton
                android:scaleType="fitXY"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_switch_camera_white"
                android:id="@+id/switchCamOrient"
                android:layout_marginTop="8dp"/>
    </RelativeLayout>

    <!--Capture still shot button -->
    <RelativeLayout
            android:id="@+id/capture_button_container"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="88dp"
                android:src="@drawable/largest_circle"
                android:layout_marginBottom="96dp"
                android:layout_height="88dp"
                android:id="@+id/stillShot_imageButton"
        />
    </RelativeLayout>


    <!-- Edit image after captured -->
    <RelativeLayout
            android:id="@+id/stillShot_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
    >

        <!--Texture View to draw some thing -->

        <com.abdulrahman.littlesnap.fragments.DrawableImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:src="@drawable/img_amusing"
                android:id="@+id/stillShot_imageView"
        />
        <!-- To close image-->
        <RelativeLayout
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:animateLayoutChanges="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/close_image_imageView"
                    android:layout_width="40dp"
                    android:src="@drawable/x_white_icon"
                    android:layout_height="40dp"/>


        </RelativeLayout>

        <!--To draw on image -->
        <RelativeLayout
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/pen_container"
                android:animateLayoutChanges="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageButton
                    android:layout_centerInParent="true"
                    android:padding="10dp"
                    android:id="@+id/pen_draw_imageButton"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_pen_small"
                    android:layout_width="45dp"
                    android:layout_height="45dp"/>

        </RelativeLayout>
        <!--End draw-->

        <!--Stickers container -->
        <RelativeLayout
                android:layout_below="@id/pen_container"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/stickers_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/sticker_camera2_imageView"
                    android:src="@drawable/ic_sticker_small"
                    android:layout_width="45dp" android:layout_height="45dp"/>
        </RelativeLayout>

        <!--Colors Picker -->
        <RelativeLayout
                android:id="@+id/colors_picker_container"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/pen_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <!--Custom view -->

            <com.abdulrahman.littlesnap.fragments.VerticalSlideColorPicker
                    android:id="@+id/color_picker"
                    app:borderColor="@color/Black"
                    app:borderWidth="1dp"
                    android:layout_marginEnd="16dp"
                    app:colors="@array/rainbow"
                    android:layout_centerHorizontal="true"
                    android:layout_width="20dp"
                    android:layout_height="200dp"/>
        </RelativeLayout>


        <!--Undo container -->
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/undo_draw_container"
                android:layout_toLeftOf="@id/pen_container">

            <ImageButton
                    android:id="@+id/undo_draw_imageButton"
                    android:src="@drawable/ic_undo"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
            />

        </RelativeLayout>

        <!--Save picture container -->
        <android.support.constraint.ConstraintLayout
                android:layout_alignParentBottom="true"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/save_picture_container
">

            <ImageView
                    android:id="@+id/save_picture_imageView"
                    android:layout_width="wrap_content"
                    android:src="@drawable/save_icon"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/save_picture_textView"
                    app:layout_constraintEnd_toEndOf="@+id/save_picture_textView" android:layout_marginStart="8dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/save_picture_textView" app:layout_constraintBottom_toBottomOf="parent"
                    android:text="@string/save_picture_str"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:fontFamily="sans-serif"
                    android:typeface="serif" android:textSize="18sp" android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
        </android.support.constraint.ConstraintLayout>
        <!--End Save picture -->

    </RelativeLayout> <!-- End stillShot_container -->


</RelativeLayout>