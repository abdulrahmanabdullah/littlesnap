<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="wrap_content" app:cardElevation="4dp"
        app:contentPadding="16dp" app:cardCornerRadius="4dp">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
    >
        <ImageView

                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/img_amusing"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/chat_imgView"/>


        <TextView
                android:id="@+id/chat_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="user name akdfjdkj"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@id/chat_imgView"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" android:fontFamily="sans-serif"
                android:typeface="sans"
        />

        <ImageView
                android:src="@drawable/ic_chat"
                android:id="@+id/chat_mim_imageView"
                android:layout_below="@id/chat_userName"
                android:layout_toRightOf="@id/chat_imgView"
                android:layout_width="25dp"
                android:layout_marginEnd="10dp"
                android:layout_height="25dp"
        />

        <TextView
                android:id="@+id/chat_messageStatus_textView"
                android:layout_toRightOf="@id/chat_mim_imageView"
                android:layout_below="@id/chat_userName"
                android:layout_marginStart="10dp"
                tools:text="Received"
                android:text="Received"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>